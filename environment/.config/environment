getenv VISUAL nvim
getenv LANG en_US.UTF-8
getenv LC_CTYPE en_US.UTF-8
getenv TERM xterm-256color
getenv MANPAGER less
getenv MANPATH /usr/share/man
getenv FZF_DEFAULT_COMMAND "rg --files --hidden --follow --smart-case"
getenv FZF_DEFAULT_OPTS "--ansi --multi --height ~60% --layout=reverse"
getenv PASSWORD_STORE_DIR ~/Documents/password-store
getenv BEMENU_OPTS "-i -l 5 -H 20 --fb '#303446' --ff '#81c8be' --nb '#303446' --nf '#f2d5cf' --tb '#303446' --hb '#303446' --tf '#ca9ee6' --hf '#8caaee' --nf '#f2d5cf' --af '#f2d5cf' --ab '#303446' --fn 'Source Code Pro 20'"

getalias la "ls -A --group-directories-first"
getalias volume "wpctl get-volume @DEFAULT_AUDIO_SINK@"
getalias battery "cat /sys/class/power_supply/BAT1/capacity"
getalias ss "systemctl status"
getalias td "transmission-daemon"
getalias tr "transmission-remote"
getalias trl "transmission-remote -l"
getalias tre "transmission-remote --exit"
getalias gs "git status"
