getvar NPM_CONFIG_USERCONFIG $XDG_CONFIG_HOME/npm/npmrc

getalias la "ls -A --group-directories-first"
getalias ll "ls -AgGh --group-directories-first"
getalias volume "wpctl get-volume @DEFAULT_AUDIO_SINK@"
